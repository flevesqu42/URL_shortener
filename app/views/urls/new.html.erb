<h2>New URL</h2>

<%= form_with model: @url do |form| %>
    <div>
        <%= form.label :full_url %>
        <%= form.text_field :full_url %>
        <%= form.submit %>
    </div>
<% end %>
<% @url.errors.full_messages.each do |message| %>
    <br><div><%= message %></div>
<% end %>
<% if !@new_shortened_url.nil? %>
    <h3><%= @new_shortened_url %></h3>
<% end %>
